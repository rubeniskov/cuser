{
  "name": "cuser",
  "version": "0.0.1",
  "description": "Distributed user messaging system",
  "private": true,
  "engines": {
    "yarn": ">=1.5.0"
  },
  "main": "index.js",
  "scripts": {
    "prepare": "lerna bootstrap",
    "test": "lerna run test",
    "docs": "./scripts/genreadme > README.md",
    "precoverage": "lerna run coverage",
    "coverage": "./scripts/gencoverage",
    "postcoverage": "codecov --file coverage.json"
  },
  "author": "rubeniskov <me@rubeniskov.com> (http://rubeniskov.com)",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "categories": {
      "cuser": [
        "@cuser/cli", 
        "@cuser/core", 
        "@cuser/publisher",
        "@cuser/reader",
        "@cuser/auth",
        "@cuser/store",
        "@cuser/crypto",  
        "@cuser/validator",
        "@cuser/utils",
        "@cuser/client",
        "@cuser/server"
      ],
      "clients": [
        "@cuser/client-rest",
        "@cuser/client-grapqhl"
      ],
      "types": [
        "@cuser/proto"
      ],
      "middlewares": [
        "@cuser/express-middleware-auth",
        "@cuser/express-middleware-rest",
        "@cuser/express-middleware-graphql"
      ],
      "integrations": [
        "@cuser/react"
      ]
    }
  },
  "devDependencies": {
    "codecov": "^3.8.1",
    "lerna": "^3.22.1",
    "nyc": "^15.1.0"
  }
}
